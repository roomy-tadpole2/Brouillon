---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import BaseLayout from '../../layouts/BaseLayout.astro'; // 引入基础布局
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <main>
        <section>
            <ul>
                {
                    posts.map((post) => (
                        <li>
                            <a href={`/blog/${post.id}/`}>
                                {post.data.heroImage && (
                                    <Image 
                                        width={720} 
                                        height={360} 
                                        src={post.data.heroImage} 
                                        alt="" 
                                        transition:name={`hero-${post.id}`} 
                                    />
                                )}
                                <h4 class="title">{post.data.title}</h4>
                                <p class="date">
                                    <FormattedDate date={post.data.pubDate} />
                                </p>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </section>
    </main>
</BaseLayout>

<script>
    // 保存位置：离开 blog 列表页时记录
    const saveScrollPos = () => {
        // 如果当前还在列表页，记录位置
        if (window.location.pathname === '/blog' || window.location.pathname === '/blog/') {
            sessionStorage.setItem('blog-scroll-pos', window.scrollY.toString());
        }
    };

    // 恢复/重置位置：进入新页面时判断
    const handleScrollBehavior = () => {
        const path = window.location.pathname;
        const scrollPos = sessionStorage.getItem('blog-scroll-pos');

        // 场景 A：进入具体的博客文章页 -> 强制回顶部
        if (path.includes('/blog/') && path !== '/blog' && path !== '/blog/') {
            window.scrollTo(0, 0);
        } 
        // 场景 B：回到博客列表页 -> 恢复记忆位置
        else if ((path === '/blog' || path === '/blog/') && scrollPos) {
            requestAnimationFrame(() => {
                window.scrollTo(0, parseInt(scrollPos));
            });
        }
    };

    // 监听 Astro 路由生命周期
    document.addEventListener('astro:before-preparation', saveScrollPos);
    document.addEventListener('astro:after-swap', handleScrollBehavior);

    // 首次进入页面或刷新时也执行一次
    window.addEventListener('pageshow', handleScrollBehavior);
</script>

<style>
    /* 这里的样式可以完全保留你原来的 */
    main {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: auto;
    }
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }
    ul li {
        width: calc(50% - 1rem);
    }
    ul li * {
        text-decoration: none;
        transition: 0.2s ease;
    }
    ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
    }
    ul li:first-child img {
        width: 100%;
    }
    ul li:first-child .title {
        font-size: 2.369rem;
    }
    ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
    }
	ul li img:hover {
		transform: translateY(-4px);
		transition: transform 0.3s ease;
	}
    ul li a {
        display: block;
    }
    .title {
        margin: 0;
        line-height: 1;
    }
    .date {
        margin: 0;
        color: rgb(var(--gray));
    }
    ul li a:hover h4,
    ul li a:hover .date {
        color: rgb(var(--accent));
    }
    ul a:hover img {
        box-shadow: var(--box-shadow);
    }
    @media (max-width: 720px) {
        ul {
            gap: 0.5em;
        }
        ul li {
            width: 100%;
            text-align: center;
        }
        ul li:first-child {
            margin-bottom: 0;
        }
        ul li:first-child .title {
            font-size: 1.563em;
        }
    }
</style>