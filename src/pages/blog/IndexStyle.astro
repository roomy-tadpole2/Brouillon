<style is:global>
    main {
        width: 1200px;
        max-width: calc(100% - 2em);
        margin: 0 auto;
        padding: 2rem 0;
        /* 确保 main 在背景之上 */
        position: relative;
        z-index: 1;
    }

    /* ==================== Header Section ==================== */
    .header-section {
        text-align: center;
        margin-bottom: 4rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        /* 确保在背景之上 */
        position: relative;
        z-index: 1;
    }

    .tagline {
        font-size: 6.2rem;
        font-weight: 240;
        margin: 5rem 0 5rem 0;
        background: rgb(25, 24, 25);
        opacity: 0.9;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
    }

    /* ==================== Search Section ==================== */
    .search-container {
        position: relative;
        width: 600px;
        max-width: 100%;
        z-index: 2;
    }

    .search-box {
        width: 100%;
        padding: 1rem 3rem 1rem 1.5rem;
        font-size: 1.2rem;
        border: 2px solid #e5e7eb;
        border-radius: 50px;
        background: #f9fafb;
        color: #323232;
        transition: all 0.3s ease;
        outline: none;
        font-family: inherit;
        box-sizing: border-box;
    }

    .search-box::placeholder {
        color: #6b7280;
        opacity: 0.7;
    }

    .search-box:focus {
        border-color: #464646;
        background: rgb(224, 224, 224);
        box-shadow: 0 4px 20px rgba(146, 146, 146, 0.368);
        transform: translateY(-2px);
    }

    .search-icon {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: #79797b;
        pointer-events: none;
        transition: color 0.3s ease;
    }

    .search-box:focus ~ .search-icon {
        color: #212021;
    }

    /* ==================== Posts Grid Section ==================== */
    .posts-section {
        margin-top: 3rem;
        /* 确保在背景之上 */
        position: relative;
        z-index: 1;
    }

    #posts-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
        position: relative;
    }

    /* ==================== Post Card ==================== */
    .post-card {
        /* 默认状态 */
        opacity: 1;
        transform: scale(1);
        transition: opacity 0.3s ease, transform 0.3s ease;
        /* 确保动画期间保持圆角和性能优化 */
        will-change: transform, opacity;
        /* 关键：使用 contain 限制布局影响 */
        contain: layout style paint;
        /* 确保卡片可以接收鼠标事件 */
        position: relative;
        z-index: 1;
        pointer-events: auto;
    }

    /* 隐藏状态 */
    .post-card.hidden {
        display: none;
        opacity: 0;
    }

    /* 淡入动画（用于页面初次加载） */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* 页面加载时的交错动画 */
    .post-card {
        animation: fadeIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) backwards;
    }

    /* .post-card:nth-child(1) { animation-delay: 0.05s; }
    .post-card:nth-child(2) { animation-delay: 0.1s; }
    .post-card:nth-child(3) { animation-delay: 0.15s; }
    .post-card:nth-child(4) { animation-delay: 0.2s; }
    .post-card:nth-child(5) { animation-delay: 0.25s; }
    .post-card:nth-child(6) { animation-delay: 0.3s; }
    .post-card:nth-child(7) { animation-delay: 0.35s; }
    .post-card:nth-child(8) { animation-delay: 0.4s; }
    .post-card:nth-child(9) { animation-delay: 0.45s; }
    .post-card:nth-child(n+10) { animation-delay: 0.5s; } */

    .post-card a {
        display: block;
        text-decoration: none;
        color: inherit;
        height: 100%;
        transition: transform 0.2s ease;
        /* 确保链接也可以接收鼠标事件 */
        pointer-events: auto;
    }

    /* ==================== Image Container ==================== */
    .image-container {
        position: relative;
        width: 100%;
        padding-bottom: 100%; /* 正方形 1:1 比例 */
        overflow: hidden !important; /* !important 确保在视图过渡时也保持 */
        border-radius: 20px !important; /* !important 确保在视图过渡时也保持 */
        background: #f3f4f6;
        margin-bottom: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        /* 关键修复：创建独立的层叠上下文 */
        isolation: isolate;
        /* 触发硬件加速 */
        transform: translateZ(0);
        /* 限制布局影响 */
        contain: layout style paint;
        /* 确保可以接收鼠标事件 */
        pointer-events: auto;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .image-container img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 1.6s ease;
        /* 确保图片不会溢出 */
        border-radius: inherit;
        /* 确保图片也可以响应hover */
        pointer-events: auto;
    }

    .post-card:hover .image-container {
        box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
    }

    .post-card:hover .image-container img {
        transform: scale(1.2);
    }

    /* ==================== Card Content ==================== */
    .card-content {
        padding: 0.5rem 0;
        /* 确保可以接收鼠标事件 */
        pointer-events: auto;
    }

    .card-title {
        margin: 0 0 0.5rem 0;
        font-size: 1.2rem;
        font-weight: 600;
        line-height: 1.4;
        color: #484848;
        transition: color 0.3s ease, transform 0.3s ease;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .card-date {
        margin: 0;
        font-size: 0.9rem;
        color: #787674;
        transition: color 0.3s ease;
    }

    .post-card:hover .card-title {
        color: #232324;
        transform: translateY(-2px);
    }

    .post-card:hover .card-date {
        color: #4e4d4f;
    }

    /* ==================== No Results Message ==================== */
    #no-results-message {
        animation: fadeIn 0.4s ease forwards;
    }

    /* ==================== 视图过渡修复 ==================== */
    /* 确保在视图过渡期间保持圆角 */
    ::view-transition-old(root),
    ::view-transition-new(root) {
        overflow: hidden;
    }

    /* 防止视图过渡影响图片容器的圆角 */
    .image-container::before,
    .image-container::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: 20px;
        pointer-events: none;
    }

    /* ==================== 背景装饰层修复 ==================== */
    /* 确保背景装饰不会阻挡交互 */
    .bg-decor {
        pointer-events: none !important;
        z-index: -1 !important;
    }

    .decor-circle {
        pointer-events: none !important;
    }

    /* ==================== Responsive Design ==================== */
    @media (max-width: 1024px) {
        #posts-list {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        main {
            width: 100%;
        }

        .tagline {
            font-size: 2.5rem;
        }

        .search-container {
            width: 500px;
        }
    }

    @media (max-width: 720px) {
        main {
            padding: 1rem 0;
        }

        .header-section {
            margin-bottom: 2rem;
        }

        .tagline {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .search-container {
            width: 100%;
            padding: 0 1rem;
        }

        .search-box {
            font-size: 1rem;
            padding: 0.875rem 2.5rem 0.875rem 1.25rem;
        }

        .search-icon {
            width: 18px;
            height: 18px;
            right: 1.25rem;
        }

        #posts-list {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .image-container {
            border-radius: 16px !important;
        }

        .card-title {
            font-size: 1.1rem;
        }

        .card-date {
            font-size: 0.85rem;
        }
    }

    @media (max-width: 480px) {
        .tagline {
            font-size: 1.75rem;
        }

        .search-box {
            font-size: 0.95rem;
            padding: 0.75rem 2.25rem 0.75rem 1rem;
        }

        .search-icon {
            width: 16px;
            height: 16px;
            right: 1rem;
        }
    }
</style>